# ===========================================
# Mini-ERP Environment Configuration
# ===========================================

# PostgreSQL (Supabase Local)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=mini_erp

# MongoDB
MONGO_USER=root
MONGO_PASSWORD=password

# Redis
REDIS_URL=redis://redis_cache:6379

# Kafka
KAFKA_BROKERS=kafka:9092

# Security
SECRET_KEY=supersecretkey123changethisinproduction
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Cloudinary (Media Uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Stripe (Billing)
STRIPE_SECRET_KEY=sk_test_dummy
STRIPE_PUBLISHABLE_KEY=pk_test_dummy

# SMTP Email Provider (for OTP verification)
# Gmail: smtp.gmail.com, port 587, use App Password
# Mailgun: smtp.mailgun.org, port 587
# SendGrid: smtp.sendgrid.net, port 587
# Mailtrap (testing): sandbox.smtp.mailtrap.io, port 2525
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@minierp.com
SMTP_FROM_NAME="Mini ERP"

# API Gateway
GIN_MODE=debug

# ML Service
ML_SERVICE_URL=http://ml-service:8000

# Legacy Backend (temporary, will be removed after migration)
LEGACY_BACKEND_URL=http://backend_api:8000